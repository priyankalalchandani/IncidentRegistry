@model IncidentDomain.Entities.Incident

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Incident Reporting</title>
        
        <link href="~/bootstrap.css" rel="stylesheet" media="screen">
        <meta name="viewport" content="width=device-width" />
        
    </head>
    <body>

@{
    ViewBag.Title = "Details";
}


<div class="container">
    <br /><br />
    <i class="icon-arrow-left"></i>@Html.ActionLink("Back to List", "Index")
    <h2>Incident Details</h2>
<table class="table table-striped table-bordered">

    <tr>
       <th>  @Html.DisplayNameFor(model => model.IncidentID) </th>
        <td> @Html.DisplayFor(model => model.IncidentID) </td>
    </tr>

    <tr>
       <th>  @Html.DisplayNameFor(model => model.Date) </th>
        <td> @Html.DisplayFor(model => model.Date) </td>
    </tr>

    <tr>
       <th>  @Html.DisplayNameFor(model => model.IncidentType) </th>
       <td> @Html.DisplayFor(model => model.IncidentType) </td>
    </tr>

    <tr>
       <th>  @Html.DisplayNameFor(model => model.Department) </th>
       <td> @Html.DisplayFor(model => model.Department) </td>
    </tr>

    <tr>
       <th>  @Html.DisplayNameFor(model => model.Description) </th>
       <td> @Html.DisplayFor(model => model.Description) </td>
    </tr>

    <tr>
       <th>  @Html.DisplayNameFor(model => model.IncidentLocation) </th>
       <td> @Html.DisplayFor(model => model.IncidentLocation) </td>
    </tr>

    <tr>
       <th>  @Html.DisplayNameFor(model => model.ActionTaken) </th>
       <td>  @Html.DisplayFor(model => model.ActionTaken) </td>
    </tr>
</table>

</div>
</body>
    </html>
