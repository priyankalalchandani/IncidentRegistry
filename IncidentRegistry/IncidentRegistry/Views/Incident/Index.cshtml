    ViewBag.Title = "Incident List";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table style="width:80%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IncidentID) 
           
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date) 
           
        </th>
