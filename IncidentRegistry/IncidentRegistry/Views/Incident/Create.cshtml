@model IncidentRegistry.Models.Incident

@{
    ViewBag.Title = "Report Incident";
}

<h2>Report Incident</h2>

@using (Html.BeginForm("Create", "Incident", FormMethod.Post, new {enctype="multipart/form-data"})) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Incident</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IncidentType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IncidentType)
            @Html.ValidationMessageFor(model => model.IncidentType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Department)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Department)
            @Html.ValidationMessageFor(model => model.Department)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UploadFile)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.UploadFile, new { type = "file"})
            @Html.ValidationMessageFor(model => model.UploadFile)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IncidentLocation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IncidentLocation)
            @Html.ValidationMessageFor(model => model.IncidentLocation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ActionTaken)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ActionTaken)
            @Html.ValidationMessageFor(model => model.ActionTaken)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EmployeeID, "Employee")
        </div>
        <div class="editor-field">
            @Html.DropDownList("EmployeeID", "Select--")
            @Html.ValidationMessageFor(model => model.EmployeeID)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
